<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="messageAction" class="cn.bubbletg.xxadj.action.MessageAction">
        <property name="messageService" ref="messageService"/>
    </bean>
    <bean id="messageService" class="cn.bubbletg.xxadj.service.MessageService">
        <property name="messageDao" ref="messageDaoImpl"/>
    </bean>

    <bean id="messageDaoImpl" class="cn.bubbletg.xxadj.dao.MessageDaoImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>
