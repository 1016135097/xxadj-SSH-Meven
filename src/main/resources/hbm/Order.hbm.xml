<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- 配置类和表对应 class标签 name属性：实体类全路径 table属性：数据库表名称 -->
    <class name="cn.bubbletg.xxadj.entity.Order" table="t_order">
        <!-- 配置实体类id和表id对应，hibernate 要求实体类有一个属性唯一值，
        hibernate要求有字段作为唯一值 -->
        <!-- id 标签
            name属性：实体类里面id属性名称
            column属性：生成表里面字段名称
         -->
        <id name="id">
            <!--
                设置数据库表id增长策略
                native : 生成表中id字段是主键和自动增长
             -->
            <generator class="native"/>
        </id>
        <!-- 配置其他属性和表字段对应
            name属性：实体类属性名称
            column：生成表里面字段名称，不写默认值与name 一样
             <property name="portrait" column="portrait"/>
         -->
        <property name="userId"/>
        <property name="openid"/>
        <property name="portrait"/>
        <property name="username"/>
        <property name="initialPosition"/>
        <property name="finalPosition"/>
        <property name="phone"/>
        <property name="time"/>
        <property name="addGenerationOfDriving"/>
        <property name="charterCarService"/>
        <property name="packageTimeDriving"/>
        <property name="initialPositionLatitude"/>
        <property name="initialPositionLongitude"/>
        <property name="finalPositionLatitude"/>
        <property name="finalPositionLongitude"/>
        <property name="ifFinish"/>
        <property name="ifAccept"/>
        <property name="receivedBy"/>

        <property name="daijiajiedan_id"/>
        <property name="zhidingsiji"/>

        <property name="creationTime"/>



